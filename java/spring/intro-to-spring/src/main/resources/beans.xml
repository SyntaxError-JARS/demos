<?xml version="1.0" encoding="UTF-8" ?>

<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context.xsd"
>

    <!-- Provide the bean for our motivation service -->
    <bean id="motivationService" class="com.revature.intro_to_spring.service.MotivationService"></bean>

    <!-- provide a bean definition for a the model, which we will call myCoach -->
    <bean id="myCoach" class="com.revature.intro_to_spring.models.BaseballCoach" scope="prototype">
        <constructor-arg ref="motivationService" ></constructor-arg>
    </bean>

    <bean id="footballCoach" class="com.revature.intro_to_spring.models.FootballCoach">
        <property name="motivationService" ref="motivationService"></property>
    </bean>

</beans>